<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity">

    <EditText
        android:id="@+id/etFirstNumber"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:hint="0"/>
    <TextView
        android:id="@+id/tvResult"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_below="@+id/etFirstNumber"/>
    
    <LinearLayout
        android:id="@+id/lnrFirstRow"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_below="@+id/tvResult"
        android:orientation="horizontal"
        android:gravity="center_horizontal"
        android:layout_marginTop="16dp">
        <Button
            android:id="@+id/btnOne"
            android:layout_width="60dp"
            android:layout_height="40dp"
            android:text="1"
            android:layout_gravity="left"
            android:onClick="one"/>
        <Button
            android:id="@+id/btnTwo"
            android:layout_width="60dp"
            android:layout_height="40dp"
            android:text="2"
            android:layout_gravity="center_horizontal"
            android:onClick="two"/>
        <Button
            android:id="@+id/btnThree"
            android:layout_width="60dp"
            android:layout_height="40dp"
            android:text="3"
            android:layout_gravity="right"
            android:onClick="three"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/lnrSecondRow"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_below="@+id/lnrFirstRow"
        android:layout_marginTop="8dp"
        android:gravity="center_horizontal">
        <Button
            android:id="@+id/btnFour"
            android:layout_width="60dp"
            android:layout_height="40dp"
            android:text="4"
            android:layout_gravity="left"
            android:onClick="four"/>
        <Button
            android:id="@+id/btnFive"
            android:layout_width="60dp"
            android:layout_height="40dp"
            android:text="5"
            android:layout_gravity="center_horizontal"
            android:onClick="five"/>
        <Button
            android:id="@+id/btnSix"
            android:layout_width="60dp"
            android:layout_height="40dp"
            android:text="6"
            android:layout_gravity="right"
            android:onClick="six"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/lnrThirdRow"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_below="@+id/lnrSecondRow"
        android:layout_marginTop="8dp"
        android:gravity="center_horizontal">
        <Button
            android:id="@+id/btnSeven"
            android:layout_width="60dp"
            android:layout_height="40dp"
            android:text="7"
            android:layout_gravity="left"
            android:onClick="seven"/>
        <Button
            android:id="@+id/btnEight"
            android:layout_width="60dp"
            android:layout_height="40dp"
            android:text="8"
            android:layout_gravity="center_horizontal"
            android:onClick="eight"/>
        <Button
            android:id="@+id/btnNine"
            android:layout_width="60dp"
            android:layout_height="40dp"
            android:text="9"
            android:layout_gravity="right"
            android:onClick="nine"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/lnrFourthRow"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_below="@+id/lnrThirdRow"
        android:layout_marginTop="8dp"
        android:gravity="center_horizontal">
        <Button
            android:id="@+id/btnPlus"
            android:layout_width="60dp"
            android:layout_height="40dp"
            android:text="+"
            android:layout_gravity="left"
            android:onClick="plus"/>
        <Button
            android:id="@+id/btnMinus"
            android:layout_width="60dp"
            android:layout_height="40dp"
            android:text="-"
            android:layout_gravity="center_horizontal"
            android:onClick="minus"/>
        <Button
            android:id="@+id/btnMultiply"
            android:layout_width="60dp"
            android:layout_height="40dp"
            android:text="*"
            android:layout_gravity="right"
            android:onClick="multiply"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/lnrFifthRow"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_below="@+id/lnrFourthRow"
        android:layout_marginTop="8dp"
        android:gravity="center_horizontal">
        <Button
            android:id="@+id/btnDivide"
            android:layout_width="60dp"
            android:layout_height="40dp"
            android:text="/"
            android:layout_gravity="left"
            android:onClick="divide"/>
        <Button
            android:id="@+id/btnZero"
            android:layout_width="60dp"
            android:layout_height="40dp"
            android:text="0"
            android:layout_gravity="center_horizontal"
            android:onClick="zero"/>
        <Button
            android:id="@+id/btnEqual"
            android:layout_width="60dp"
            android:layout_height="40dp"
            android:text="="
            android:layout_gravity="right"
            android:onClick="equal"/>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/lnrSixthRow"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_below="@+id/lnrFifthRow"
        android:layout_marginTop="8dp"
        android:gravity="center_horizontal">
        <Button
            android:id="@+id/btnPoint"
            android:layout_width="60dp"
            android:layout_height="40dp"
            android:text="."
            android:layout_gravity="right"
            android:onClick="point"/>
        <Button
            android:id="@+id/btnClear"
            android:layout_width="120dp"
            android:layout_height="40dp"
            android:text="Clear"
            android:layout_gravity="left"
            android:onClick="clear"/>

    </LinearLayout>

</RelativeLayout>
