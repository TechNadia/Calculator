<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity">

    <EditText
        android:id="@+id/etFirstNumber"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:hint="0"
        android:gravity="right"/>
    <TextView
        android:id="@+id/tvResult"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_below="@+id/etFirstNumber"/>
    <LinearLayout
        android:id="@+id/lnrFirstRow"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_below="@+id/tvResult"
        android:orientation="horizontal"
        android:gravity="center_horizontal"
        android:layout_marginTop="8dp">
        <Button
            android:id="@+id/btnOne"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="40dp"
            android:text="1"
            android:layout_gravity="left"
            android:onClick="one"
            android:background="@color/background_floating_material_dark"
            android:textColor="#fff"
            android:layout_marginRight="2dp"/>
        <Button
            android:id="@+id/btnTwo"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="40dp"
            android:text="2"
            android:layout_gravity="center_horizontal"
            android:onClick="two"
            android:background="@color/background_floating_material_dark"
            android:textColor="#fff"
            android:layout_marginRight="2dp"/>
        <Button
            android:id="@+id/btnThree"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="40dp"
            android:text="3"
            android:layout_gravity="right"
            android:onClick="three"
            android:background="@color/background_floating_material_dark"
            android:textColor="#fff"
            android:layout_marginRight="2dp"/>
        <Button
            android:id="@+id/btnDelete"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="40dp"
            android:text="DEL"
            android:layout_gravity="left"
            android:background="#d03b23"
            android:textColor="#fff"
            android:onClick="delete"
            android:layout_marginRight="2dp"/>
        <Button
            android:id="@+id/btnClear"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="40dp"
            android:text="AC"
            android:layout_gravity="left"
            android:background="#d03b23"
            android:textColor="#fff"
            android:onClick="clear"/>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/lnrSecondRow"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_below="@+id/lnrFirstRow"
        android:layout_marginTop="4dp"
        android:gravity="center_horizontal">
        <Button
            android:id="@+id/btnFour"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="40dp"
            android:text="4"
            android:layout_gravity="left"
            android:onClick="four"
            android:background="@color/background_floating_material_dark"
            android:textColor="#fff"
            android:layout_marginRight="2dp"/>
        <Button
            android:id="@+id/btnFive"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="40dp"
            android:text="5"
            android:layout_gravity="center_horizontal"
            android:onClick="five"
            android:background="@color/background_floating_material_dark"
            android:textColor="#fff"
            android:layout_marginRight="2dp"/>
        <Button
            android:id="@+id/btnSix"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="40dp"
            android:text="6"
            android:layout_gravity="right"
            android:onClick="six"
            android:background="@color/background_floating_material_dark"
            android:textColor="#fff"
            android:layout_marginRight="2dp"/>
        <Button
            android:id="@+id/btnDivide"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="40dp"
            android:text="/"
            android:layout_gravity="left"
            android:onClick="divide"
            android:background="@color/background_floating_material_dark"
            android:textColor="#fff"
            android:layout_marginRight="2dp"/>
        <Button
            android:id="@+id/btnMultiply"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="40dp"
            android:text="*"
            android:layout_gravity="right"
            android:onClick="multiply"
            android:background="@color/background_floating_material_dark"
            android:textColor="#fff"/>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/lnrThirdRow"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_below="@+id/lnrSecondRow"
        android:layout_marginTop="4dp"
        android:gravity="center_horizontal">
        <Button
            android:id="@+id/btnSeven"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="40dp"
            android:text="7"
            android:layout_gravity="left"
            android:onClick="seven"
            android:background="@color/background_floating_material_dark"
            android:textColor="#fff"
            android:layout_marginRight="2dp"/>
        <Button
            android:id="@+id/btnEight"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="40dp"
            android:text="8"
            android:layout_gravity="center_horizontal"
            android:onClick="eight"
            android:background="@color/background_floating_material_dark"
            android:textColor="#fff"
            android:layout_marginRight="2dp"/>
        <Button
            android:id="@+id/btnNine"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="40dp"
            android:text="9"
            android:layout_gravity="right"
            android:onClick="nine"
            android:background="@color/background_floating_material_dark"
            android:textColor="#fff"
            android:layout_marginRight="2dp"/>
        <Button
            android:id="@+id/btnPlus"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="40dp"
            android:text="+"
            android:layout_gravity="left"
            android:onClick="plus"
            android:background="@color/background_floating_material_dark"
            android:textColor="#fff"
            android:layout_marginRight="2dp"/>
        <Button
            android:id="@+id/btnMinus"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="40dp"
            android:text="-"
            android:layout_gravity="center_horizontal"
            android:onClick="minus"
            android:background="@color/background_floating_material_dark"
            android:textColor="#fff"
            />
    </LinearLayout>
    <LinearLayout
        android:id="@+id/lnrFourthRow"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_below="@+id/lnrThirdRow"
        android:layout_marginTop="4dp"
        android:gravity="center_horizontal">

        <Button
            android:id="@+id/btnZero"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="40dp"
            android:text="0"
            android:layout_gravity="center_horizontal"
            android:onClick="zero"
            android:background="@color/background_floating_material_dark"
            android:textColor="#fff"
            android:layout_marginRight="2dp"/>
        <Button
            android:id="@+id/btnPoint"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="40dp"
            android:text="."
            android:layout_gravity="right"
            android:onClick="point"
            android:background="@color/background_floating_material_dark"
            android:textColor="#fff"
            android:layout_marginRight="2dp"/>

        <Button
            android:id="@+id/btnSignConvert"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="40dp"
            android:text="+/-"
            android:layout_gravity="right"
            android:onClick="signConvert"
            android:background="@color/background_floating_material_dark"
            android:layout_marginRight="2dp"
            android:textColor="#fff"/>
        <Button
            android:id="@+id/btnEqual"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="40dp"
            android:text="="
            android:layout_gravity="right"
            android:onClick="equal"
            android:background="@color/background_floating_material_dark"
            android:textColor="#fff"/>
    </LinearLayout>
</RelativeLayout>
